{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contact Form</h1>
    {{ form_start(contact_form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(contact_form) }}
    </div>
    <div class="form-group">
        {{ form_row(contact_form.name, {
            "label": "Neved",
            "attr": {
                "placeholder": "Írd be a neved",
                "name":"name",
                "id":"name",
                "class" : "form-control",
                "oninvalid":"this.setCustomValidity('Hiba! Kérjük töltsd ki az összes mezőt!')",
                "oninput":"this.setCustomValidity('')"
            }
        }) }}
    </div>
    <div class="form-group">
    {{ form_row(contact_form.email, {
        "label": "Email címed",
        "attr": {
            "placeholder": "Írd be az email címed",
            "name":"email",
            "id":"email",
            "class" : "form-control",
            "oninvalid":"this.setCustomValidity('Hiba! Kérjük töltsd ki az összes mezőt!')",
            "oninput":"this.setCustomValidity('')"
        }
    }) }}
    </div>
    <div class="form-group">
        {{ form_row(contact_form.message, {
            "label": "Üzenet szövege",
            "attr": {
                "placeholder": "Írd be az üzenet szövegét",
                "name":"message",
                "id":"message",
                "class" : "form-control",
                "oninvalid":"this.setCustomValidity('Hiba! Kérjük töltsd ki az összes mezőt!')",
                "oninput":"this.setCustomValidity('')"
            }
        }) }}
        </div>
    {{ form_row(contact_form.Submit, {
        'label': 'Küldés',
        "attr": {
            "class" : "btn btn-primary",
        }
    }) }}
    {{ form_end(contact_form) }}
{% endblock %}